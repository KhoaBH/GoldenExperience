<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MealPrepFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Alex"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready for a delicious day?"
        android:textSize="18sp"
        android:textColor="#666666"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="4dp"/>
    <include
        layout="@layout/view_search_bar"
        android:id="@+id/foodSearchBar" />


    <View
        android:layout_width="375dp"
        android:layout_height="2dp"
        android:background="#FF7043"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FAEBCF"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUESDAY, APR 2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circleProgress"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        app:indicatorSize="100dp"
                        app:indicatorInset="4dp"
                        app:trackThickness="10dp"
                        app:trackColor="@android:color/darker_gray"
                        app:indicatorColor="@android:color/holo_blue_dark"
                        style="@style/Widget.Material3.CircularProgressIndicator" />

                    <TextView
                        android:id="@+id/txtPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Calo"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#000000" /> <!-- màu xanh đậm nổi bật -->
                </FrameLayout>
                <!-- Calories -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTotalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1300/2100 Kcal"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                </LinearLayout>
            </LinearLayout>
            <!-- Vòng tròn tiến trình -->


            <!-- Thông tin chi tiết -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                 <!-- màu đen hơi xám -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="2">



                    <!-- Protein, Carb, Fat -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">

                            <TextView
                                android:id="@+id/txtProteinLabel"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Protein:"
                                android:textSize="20sp"
                                android:textColor="#D32F2F " />

                            <TextView
                                android:id="@+id/txtProteinValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="75/150g"
                                android:textSize="20sp"
                                android:textColor="#D32F2F " />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">

                            <TextView
                                android:id="@+id/txtCarbsLabel"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Carbs:"
                                android:textSize="20sp"
                                android:textColor="#4CAF50  " />

                            <TextView
                                android:id="@+id/txtCarbsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120/300g"
                                android:textSize="20sp"
                                android:textColor="#4CAF50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtFatsLabel"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Fats:"
                                android:textSize="20sp"
                                android:textColor="#1976D2 " />

                            <TextView
                                android:id="@+id/txtFatsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50/70g"
                                android:textSize="20sp"
                                android:textColor="#1976D2 " />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepare Your Meal"
        android:textStyle="bold"
        android:textColor="#222222"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="8dp"
        />

    <View
        android:layout_width="375dp"
        android:layout_height="2dp"
        android:background="#FF7043"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:background="#FFFFFF">

        <!-- Breakfast Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_breakfast"
                android:background="@drawable/circle_background_bf"
                android:padding="8dp"
                app:tint="#F06292" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Breakfast"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Lunch Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_lunch"
                android:background="@drawable/circle_background_lunch"
                android:padding="8dp"
                app:tint="#FFB300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lunch"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Dinner Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_dinner"
                android:background="@drawable/circle_background_dinner"
                android:padding="8dp"
                app:tint="#F44336" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Dinner"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Snack Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_snack"
                android:background="@drawable/circle_background_snack"
                android:padding="8dp"
                app:tint="#AB47BC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Snack"
                android:textSize="14sp"
                android:textColor="#212121" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
