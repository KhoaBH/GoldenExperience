<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Ảnh món ăn -->
        <ImageView
            android:id="@+id/imgMeal"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/meal"
            android:clipToOutline="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <!-- Bookmark icon -->
        <Button
            android:id="@+id/DeleteBtn"
            android:layout_width="89dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:text="Delete"
            android:backgroundTint="#F44336"
            android:src="@drawable/ic_bookmark"
            app:layout_constraintTop_toBottomOf="@+id/layoutStats"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tag -->
        <TextView
            android:id="@+id/tvTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Healthy Choice"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            app:layout_constraintTop_toTopOf="@id/imgMeal"
            app:layout_constraintStart_toEndOf="@id/imgMeal"
             />

        <!-- Tên món -->
        <TextView
            android:id="@+id/tvMealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quinoa Salad"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvTag"
            app:layout_constraintStart_toEndOf="@id/imgMeal" />
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="50dp"
            android:layout_height="25sp"
            android:hint="100"
            android:inputType="number"
            android:textSize="14sp"
            android:padding="4dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/bg_edittext_border"
            app:layout_constraintTop_toBottomOf="@id/tvTag"
            app:layout_constraintStart_toEndOf="@id/tvMealName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvMealName"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/Unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gram"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121"
            android:paddingLeft="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvTag"
            app:layout_constraintStart_toEndOf="@id/etQuantity" />



        <!-- Hàng chỉ số (table giữ nguyên) -->
        <TableLayout
            android:id="@+id/layoutStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp"
            android:stretchColumns="*"
            app:layout_constraintTop_toBottomOf="@id/tvMealName"
            app:layout_constraintStart_toEndOf="@id/imgMeal"
            app:layout_constraintEnd_toEndOf="parent">

            <TableRow>
                <!-- Protein -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fire" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textSize="16sp"
                        android:textColor="#FF4500" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textSize="15sp"
                        android:textColor="#FF4500" />
                </LinearLayout>

                <!-- Fat -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.8">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fat" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="16sp"
                        android:textColor="#FFC107" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textSize="15sp"
                        android:textColor="#FFC107" />
                </LinearLayout>

                <!-- Carb -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_leaf" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textSize="15sp"
                        android:textColor="#4CAF50" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:textSize="16sp"
                        android:textColor="#4CAF50" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
