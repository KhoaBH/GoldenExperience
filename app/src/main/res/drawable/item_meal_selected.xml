<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Ảnh món ăn -->
        <ImageView
            android:id="@+id/imgMeal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/meal"
            android:clipToOutline="true" />

        <!-- Bookmark icon -->
        <ImageView
            android:id="@+id/btnBookmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
             />

        <!-- Tag -->
        <TextView
            android:id="@+id/tvTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgMeal"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/imgMeal"

            android:padding="4dp"
            android:text="Healthy Choice"
            android:textSize="12sp"
            android:textColor="#4CAF50" />

        <!-- Tên món -->
        <TextView
            android:id="@+id/tvMealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTag"
            android:layout_toEndOf="@id/imgMeal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Quinoa Salad"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121" />

        <!-- Hàng chỉ số -->
        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMealName"
            android:layout_toEndOf="@id/imgMeal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Calories -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                     />
                <TextView
                    android:text="450"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp" />
                <TextView
                    android:text="Kcal"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                     />
                <TextView
                    android:text="20"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:textColor="#000000" />
                <TextView
                    android:text="min"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Protein -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                     />
                <TextView
                    android:text="15"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:textColor="#4CAF50" />
                <TextView
                    android:text="Protein"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
